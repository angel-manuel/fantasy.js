{
    "content": {
        "download": {
            "map": {"type": "map", "src": "map/isometric1/map.json"},
            "collision_matrix": {"type": "matrix", "src": "map/isometric1/collision.json"},
            "walking_sprite": {"type": "image", "src": "content/player.png"}
        },
        "abstraction": {
            "player_animation": {
                "type": "animation_collection",
                "args": {
                    "image": "walking_sprite",
                    "tile_width": 32,
                    "tile_height": 32,
                    "time": 1,
                    "index": {
                        "idle": [2],
                        "1": [43, 44, 45, 46, 47, 48],
                        "2": [25, 26, 27, 28, 29, 30],
                        "3": [7, 8, 9, 10, 11, 12],
                        "4": [1, 2, 3, 4, 5, 6],
                        "5": [19, 20, 21, 22, 23, 24],
                        "6": [13, 14, 15, 16, 17, 18],
                        "7": [31, 32, 33, 34, 35, 36],
                        "8": [37, 38, 39, 40, 41, 42]
                    }
                }
            }
        }
    },
    "tree": {
        "map": {
            "transform": {
                "x": 500
            },
            "components": [
                {
                    "type": "isometric_collider",
                    "args": {
                        "matrix": "collision_matrix",
                        "tile_height": 32,
                        "tile_width": 64
                    }
                },
                {
                    "type": "dummy_drawer",
                    "args": {
                        "target": "map"
                    }
                }
            ],
            "subnodes": {
                "player": {
                    "transform": {
                        "z": -1
                    },
                    "components": [
                        {
                            "type": "isometric_player",
                            "args": {
                                "walking_speed": 3,
                                "animations_collection": "player_animation",
                                "idle_animation": "player_idle"
                            }
                        },
                        {
                            "type": "orthografic_camera",
                            "args": {
                                "layer_mask": 65535,
                                "background": "CornflowerBlue",
                                "viewport": {
                                    "x": "0%",
                                    "y": "0%",
                                    "width": "100%",
                                    "height": "100%"
                                },
                                "width": "100%",
                                "height": "100%"
                            }
                        }
                    ]        
                }
            }
        }
    }
}
